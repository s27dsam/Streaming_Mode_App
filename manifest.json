{
  "manifest_version": 3,
  "name": "Streaming Mode (Tab Lock)",
  "version": "2.0",
  "description": "Lock yourself to a single tab to stop having to close popup adds on streaming sites.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "commands": {
    "toggle-streaming-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle Streaming Mode On/Off"
    }
  }
}