{
  "manifest_version": 3,
  "name": "Streaming Mode (Tab Lock)",
  "version": "1.0",
  "description": "Lock yourself to a single tab to stop having to close popup adds on streaming sites.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}